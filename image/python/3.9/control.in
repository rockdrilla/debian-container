               autoconf-archive,
               g++-@{gcc_latest},
               jq,
               libbluetooth-dev,
               libbz2-dev,
               libc6-dev,
               libdb-dev | libgdbm-compat-dev,
               libexpat1-dev,
               libffi-dev,
