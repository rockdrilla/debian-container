#!/bin/sh

set -e

if [ "$1" != "upgrade" ]; then
	bin=/usr/bin

	update-alternatives --remove \
	  2to3 \
	  ${bin}/2to3-@{PYTHON_BASE_VERSION}

	for stem in python python3 ; do
		update-alternatives --remove \
		  @{DEB_HOST_MULTIARCH}-${stem}-config \
		  ${bin}/@{DEB_HOST_MULTIARCH}-python@{PYTHON_BASE_VERSION}-config
	done
fi

#DEBHELPER#

exit 0
