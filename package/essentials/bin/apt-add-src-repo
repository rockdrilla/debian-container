#!/bin/sh
# SPDX-License-Identifier: Apache-2.0
# (c) 2018-2023, Konstantin Demin

set -ef

usage() {
	cat >&2 <<-EOF
	# usage: ${0##*/} <name> <repo uri> <distribution> <component> [<component> ..]
	EOF
	exit "${1:-0}"
}
[ $# != 0 ] || usage

arg_ok=
while : ; do
	[ -n "$1" ] || break
	[ -n "$2" ] || break
	[ -n "$3" ] || break
	[ -n "$4" ] || break
	arg_ok=1
break ; done
[ -n "${arg_ok}" ] || usage 1

distro=$(sed -En '/^ID=(.+)$/s//\1/p' /etc/os-release)
suite=$(sed -En '/^VERSION_CODENAME=(.+)$/s//\1/p' /etc/os-release)

name="$1"
uri=$(printf '%s' "$2" | sed -e "s/@{distro}/${distro}/g" -e "s/@{suite}/${suite}/g")
distro=$(printf '%s' "$3" | sed -e "s/@{distro}/${distro}/g" -e "s/@{suite}/${suite}/g")
shift 3

comps=$(printf '%s' "$*" | sed -e "s/@{distro}/${distro}/g" -e "s/@{suite}/${suite}/g")

printf 'deb-src %s %s %s\n' "${uri}" "${distro}" "${comps}" >> "/etc/apt/sources.list.d/${name}.list"
