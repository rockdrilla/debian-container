#!/bin/sh
# SPDX-License-Identifier: Apache-2.0
# (c) 2022-2023, Konstantin Demin

set -ef

me="${0##*/}"
usage() {
	cat >&2 <<-EOF
	# usage: ${me} [options] <apt package list> <command> [arguments]
	# options:
	#  -u <user>[:<group>], --user <user>[:<group>], --user=<user>[:<group>]
	#    user switching (for command)
	EOF
	exit "${1:-0}"
}
[ $# != 0 ] || usage

msg() { echo ${1:+"# ${me}: $*"} >&2 ; }
msgf() {
	_____fmt="$1" ; shift
	env printf "# ${me}: ${_____fmt}\\n" ${@+"$@"} >&2
	unset _____fmt
}

join_lines() { sed -zE 's/[[:space:]]+/ /g;s/^ //;s/ $//' ; }

_q=quiet
[ "${APT_WRAP_QUIET:-1}" = 1 ] || _q=

# internal methods
case "$1" in
--begin)
	# begin "session"
	shift

	deps=$(echo "$*" | join_lines)

	w=$(mktemp -d) ; : "${w:?}"

	apt-list-installed > "$w/installed.0"
	apt-list-manual    > "$w/manual.0"

	: > "$w/keep"
	: > "$w/new"

	if [ -z "${deps}" ] ; then
		msg 'warning: nothing was selected as build-deps'
	else
		export APT_METHOD="${APT_WRAP_INSTALL_METHOD:-install}"
		case "${APT_METHOD}" in
		satisfy)
			if ! ${_q} apt-install "${deps}" ; then
				rm -rf "$w"
				exit 1
			fi
		;;
		*)
			if ! ${_q} apt-install ${deps} ; then
				rm -rf "$w"
				exit 1
			fi
		;;
		esac </dev/null >&2

		apt-list-installed > "$w/installed.1"
		apt-list-manual    > "$w/manual.1"

		set +e
		grep -Fxv -f "$w/installed.0" < "$w/installed.1" > "$w/new"
		set -e
	fi

	echo "$w"
	exit 0
;;
--end)
	# end "session"
	shift

	w="$1"

	ok=
	while : ; do
		[ -d "$w" ]             || break
		[ -s "$w/installed.0" ] || break
		[ -s "$w/manual.0" ]    || break
		ok=1 ; break
	done
	if [ -z "${ok}" ] ; then
		msg 'error: wrong state!'
		exit 1
	fi

	x="$w/keep"
	if [ -s "$x" ] ; then
		set +e
		xargs -r -a "$x" \
		  dpkg-query --show --showformat='${Package}:${Architecture}\n' \
		> "$x.adjust"
		grep -Fxv -f "$w/installed.0" "$x.adjust" > "$x"
		set -e
		rm -f "$x.adjust"
		xargs -r -a "$x" \
		  quiet apt-mark manual >&2
	fi

	apt-list-installed > "$w/installed.2"
	apt-list-manual    > "$w/manual.2"

	# disable "safety" due to "grep"
	set +e

	x="$w/installed.1"
	if ! [ -s "$x" ] ; then x="$w/installed.2" ; fi
	grep -Fxv -f "$w/installed.0" "$x" \
	> "$w/installed.diff"

	x="$w/manual.1"
	if ! [ -s "$x" ] ; then x="$w/manual.0" ; fi
	grep -Fxv -f "$x" "$w/manual.2" \
	> "$w/manual.diff"

	if [ -s "$w/manual.diff" ] ; then
		grep -Fxv -f "$w/manual.diff" "$w/installed.diff"
	else
		cat "$w/installed.diff"
	fi \
	> "$w/pkg.remove"

	set -e

	m="${APT_WRAP_REMOVE_METHOD:-purge}"
	case "$m" in
	purge|remove) ;;
	*)
		msg 'warning: adjusting APT_WRAP_REMOVE_METHOD to "purge"'
		m=purge
	;;
	esac

	r=1
	while : ; do
		xargs -r -a "$w/pkg.remove" \
		  ${_q} dpkg --force-all "--$m" >&2 \
		|| break

		unset APT_METHOD
		xargs -r -a "$w/keep" \
		  apt-install >/dev/null 2>&1 \
		|| ${_q} apt-install -f >&2 \
		|| break

		r=0 ; break
	done

	rm -rf "$w"
	exit $r
;;
esac

verify_user() {
	if run-as "$1" true >&2 ; then return 0 ; fi
	msg 'error: user specifier is broken'
	usage 1
}

o_user=

# process options
want_value=
n_opt=0
for i ; do
	if [ -n "${want_value}" ] ; then
		case "${want_value}" in
		user)
			o_user="$i"
			verify_user "${o_user}"
		;;
		esac

		want_value=
		n_opt=$((n_opt+1))
		continue
	fi

	case "$i" in
	-u | --user | --user=* )
		if [ -n "${o_user}" ] ; then
			msg 'error: user specifier already set'
			usage 1
		fi
		case "$i" in
		*=*)
			o_user="${i#*=}"
			verify_user "${o_user}"
		;;
		* ) want_value=user ;;
		esac
	;;
	-*)
		msgf 'unknown option: %q' "$i"
		usage 1
	;;
	*) break ;;
	esac

	n_opt=$((n_opt+1))
done

[ ${n_opt} = 0 ] || shift ${n_opt}

[ $# -ge 2 ] || usage 1

deps="$1" ; shift
w=$("$0" --begin "${deps}") || exit

chmod -R go-rwx "$w"

export APT_WRAP_KEEP="$w/keep"
export APT_WRAP_NEW="$w/new"

if [ -n "${o_user}" ] ; then
	g=$(run-as "${o_user}" id -g)
	chgrp "$g" "$w" "$w/new" "$w/keep"
	chmod g+rx "$w"
	chmod g+r  "$w/new"
	chmod g+rw "$w/keep"
fi

set +e
[ -n "${_q}" ] || msg
${o_user:+ run-as "${o_user}" } "$@"
r=$?
[ -n "${_q}" ] || msg
msg "command return code: $r"
[ -n "${_q}" ] || msg

# early exit
if [ $r != 0 ] ; then
	: > "$w/keep"
	"$0" --end "$w"
	exit $r
fi

"$0" --end "$w" || r=$?
exit $r
