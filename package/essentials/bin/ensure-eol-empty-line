#!/bin/sh
# SPDX-License-Identifier: Apache-2.0
# (c) 2023, Konstantin Demin

set -ef

[ -n "$1" ] || exit 1
[ -f "$1" ] || exit 1
! [ -h "$1" ] || exit 1

# ensure that we have at least two empty lines at the end
n=$(stat -c '%s' "$1") || exit 1

want_lf=2 i=$n
case "$n" in
1 ) ;;
0 )
    exit 0
;;
* )
    i=2
;;
esac

while [ $i -gt 0 ] ; do
	n=$((n - 1))
	c=$(od -A n -j "$2" -N 1 -t x1 "$1") || exit 1
    c=$(printf '%s' "$c" | tr -d '[:space:]')
	i=$((i - 1))

	[ "$c" = '0a' ] || break
	want_lf=$((want_lf - 1))
done

padding=
case "${want_lf}" in
0 )
    exit 0
;;
1 )
    padding='\n'
;;
2 )
    padding='\n\n'
;;
esac

printf "${padding}" >> "$1"
