#!/usr/bin/make -f

DEPS_ICU_VERSION = $(shell awk '/^#define U_ICU_VERSION / {print $$3}' deps/icu-small/source/common/unicode/uvernum.h | tr -c -d '.0-9')
DEBIAN_ICU_VERSION = $(dpkg-query -f '$${Version}' -W libicu-dev)

ifneq (,$(DEBIAN_ICU_VERSION))
  ifneq (,$(DEPS_ICU_VERSION))
    system_icu := $(shell dpkg --compare-versions $(DEBIAN_ICU_VERSION) ge $(DEPS_ICU_VERSION) && echo yes)
  endif
endif
